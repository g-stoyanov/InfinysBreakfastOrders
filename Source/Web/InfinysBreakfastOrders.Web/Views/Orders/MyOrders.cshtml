@model IEnumerable<InfinysBreakfastOrders.Data.Models.Order>
@{
    ViewBag.Title = "MyOrders";
}

<div class="row">
    <h2 class="col-md-4">@ViewBag.Title</h2>
</div>
<hr />
<hr />

<div class="container">
    @foreach (var order in Model)
    {
        <div class="row">
            <div class="col-md-2">
                <h4>@order.OrderDate.ToShortDateString()</h4>
            </div>
            <div class="col-md-10">
                <h4>@order.OrderText</h4>
            </div>
        </div>
        <hr />
    }
</div>
